<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mihai1.hhhhh.MainActivity"
    android:background="@drawable/isd">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_x="200dp"
        android:layout_y="420dp"
        android:background="#2e2d2d"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_x="100dp"
        android:layout_y="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView"
        android:layout_x="30dp"
        android:layout_y="35dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_x="100dp"
        android:layout_y="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Barcode"
        android:id="@+id/textView2"
        android:layout_x="13dp"
        android:layout_y="80dp"
        android:textColor="#060606" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_x="100dp"
        android:layout_y="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Brand"
        android:id="@+id/textView3"
        android:layout_x="32dp"
        android:layout_y="130dp"
        android:textColor="#040404" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_x="100dp"
        android:layout_y="170dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Model"
        android:id="@+id/textView4"
        android:layout_x="30dp"
        android:layout_y="180dp"
        android:textColor="#070707" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_x="100dp"
        android:layout_y="220dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Serial"
        android:id="@+id/textView5"
        android:layout_x="33dp"
        android:layout_y="233dp"
        android:textColor="#070707" />

    <ListView
        android:layout_width="267dp"
        android:layout_height="120dp"
        android:id="@+id/listView"
        android:layout_x="45dp"
        android:layout_y="292dp"
        android:choiceMode="singleChoice"
        android:background="#FF6600"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan"
        android:id="@+id/button2"
        android:layout_x="80dp"
        android:layout_y="420dp"
        android:background="#2e2d2d"
        android:textColor="#ffffff" />

</AbsoluteLayout>
